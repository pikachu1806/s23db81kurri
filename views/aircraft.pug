extends layout

block content
  h1= title
  - let aircraft = results
  - let destination2 = `dispatch(\"/aircraft/create\")`
  div(class="container-fluid")
    div(class="row m-1")
      div(class="col-sm-4 mb-2")
        button.btn-sm(class="btn btn-primary", onclick= destination2) Create Aircraft

    each item in results
      - let destination1 = `dispatch(\"/aircraft/update?id=${item._id}\")`
      - let destination3 = `dispatch(\"/aircraft/detail?id=${item._id}\")`
      - let destination4 = `dispatch(\"/aircraft/delete?id=${item._id}\")`

      div(class="row m-1")
        div(class="col-sm-2 mb-2")
          div Aircraft Model: #{item.aircraft_model}, Aircraft Type: #{item.aircraft_type}, Manufacture Year: #{item.manufacture_year}
        div(class="col-sm-10 mb-2")
          button.btn-sm(class="btn btn-primary ml-1", onclick= destination1) Update 
          button.btn-sm(class="btn btn-primary ml-1", onclick= destination3) Detail
          button.btn-sm(class="btn btn-primary ml-1", onclick= destination4) Delete

  script.
    function dispatch(path) { 
      window.location.href = path;
    }
