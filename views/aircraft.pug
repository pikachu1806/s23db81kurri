extends layout

block content
  h1= title
  - let aircraft  = results
  div(class="container-fluid")
    div(class="row m-1")
      each item in results
       - let destination1 = `dispatch(\"/aircraft/update?id=${item._id}\")`
       - let destination2 = `dispatch(\"/aircraft/create\")`
       - let destination3 = `dispatch(\"/aircraft/detail?id=${item._id}\")`
       - let destination4 = `dispatch(\"/aircraft/delete?id=${item._id}\")`
       div(class="col-sm-2") Aircraft Model:#{item.aircraft_model}, aircraft type:#{item.aircraft_type}, manufacture year:#{item.manufacture_year}
        button.btn( class="btn-primary ml-1", onclick= destination2) Create 
        button.btn( class="btn-primary ml-1", onclick= destination1) Update 
        button.btn( class="btn-primary ml-1", onclick= destination3) Detail
        button.btn( class="btn-primary ml-1", onclick= destination4) Delete

  script. 
